{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "es2015"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "incremental": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ]
}